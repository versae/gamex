#:kivy 1.0

<Controller>:
    paint: _paint
    controls: _controls

    AnchorLayout:
        anchor_x: 'left' 
        anchor_y: 'top'

        Image:
            id: _paint
            source: root.db.get(root.index)["image"]
            size_hint: (0.9, 0.95)
            on_touch_down: root.touch_down(*args)


    AnchorLayout:
        anchor_x: 'right' 
        anchor_y: 'top'

        BoxLayout:
            id: _controls
            size_hint: (0.1, 0.95)
            orientation: 'vertical'
            AnchorLayout:
                action: root.FACE
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/punch.png'
                    color: [1,1,1,1]
            AnchorLayout:
                action: root.NOSE
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/punch.png'
                    color: [.5,.5,.5,.5]
            AnchorLayout:
                action: root.MOUTH
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/punch.png'
                    color: [.5,.5,.5,.5]
            AnchorLayout:
                action: root.EYES
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/icon.png'
                    color: [.5,.5,.5,.5]
            AnchorLayout:
                action: root.EARS
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/punch.png'
                    color: [.5,.5,.5,.5]
            AnchorLayout:
                action: root.THROAT
                anchor_x: 'center' 
                anchor_y: 'center'
                Image:
                    source: 'img/icon.png'
                    color: [.5,.5,.5,.5]



    AnchorLayout:
        anchor_x: 'center' 
        anchor_y: 'bottom'

        BoxLayout:
            size_hint: (1, 0.05)
            Button:
                text: '<< Previous'
                on_press: root.previous()
            Label:
                color: [0.9,0.8,0.5,0.5]
                text: 'High score: ' + str(root.high_score)
            Label:
                color: [0.3,0.9,0.8,0.9]
                text: 'Your score: ' + str(root.score)
            Button:
                text: 'Next >>'
                on_press: root.next()



